<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.angele.exercicio3.MainActivity">

    <LinearLayout
        android:id="@+id/introducao"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:onClick="tirarFoto"
            android:src="@mipmap/ic_launcher_round" />

        <TextView
            android:id="@+id/text1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="O que acontece?" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/tweets"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <EditText
            android:id="@+id/text_twt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:inputType="textMultiLine" />

        <Button
            android:id="@+id/button_twt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="tweetar"
            android:text="Tweetar" />

        <ListView
            android:id="@+id/list_log_twt"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:longClickable="true"
            android:layout_weight="1" />

    </LinearLayout>
</LinearLayout>
